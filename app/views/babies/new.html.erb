      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag("ppp-logo.svg", class: "d-block align-top mx-auto", width: 50) %>
      <% end %>
      <%= link_to root_path, class: "btn btn-primary mx-auto my-3 d-block w-75" do %>
         <%= fa_icon("plus") %> 
         <span class="d-none d-lg-inline-block">New Dashboard</span>
      <% end %>
      <nav class="nav flex-column">
         <%= link_to root_path, class: "nav-link" do %>
            <%= fa_icon("home") %> 
            <span class="d-none d-lg-inline-block">Home</span>
         <% end %>
