<main>
<div class="container">
   <div class="card">
      <div class="card-body box-shadow p-0">         
            <div class="row">
               <div class="col-md-8">
                  <div class="baby baby__main">
                     <div class="d-inline float-right pt-3">
                        <div class="btn-group" role="group">
                           <%= link_to "#", class: "btn btn-sm" do %>
                              <%= fa_icon("list") %> List View
                           <% end %>
                           <%= link_to "#", class: "btn btn-sm" do %>
                              <%= fa_icon("calendar") %> Calendar View
                           <% end %>
                        </div>
                     </div>
                     <h1 class="border-bottom mb-4">Entries</h1>
                     <div class="list-group">
                        <% @entries.keys.sort { |a, b| b <=> a }.each do |month| %>
                           <h2 class="list-group__heading"><%= month.strftime("%B") %></h2>
                           <% for entry in @entries[month] %>
                              <%= link_to baby_entry_path(@baby, entry), class: "list-group-item list-group-item-action flex-column align-items-start" do %>         
                                 <div class="d-flex w-100 justify-content-between">                          
                                    <h4 class="mb-1"><%= entry.created_at.strftime("%A, %B %e, %Y") %></h4>
                                    <small class="text-primary">View Entry <%= fa_icon("chevron-right") %></small> 
                                 </div>
                                 <div class="row py-md-3">
                                   <div class="col-6 col-md-3 metric text-primary">
                                       <h3 class="metric__data">20oz</h3>
                                       <%= fa_icon("cutlery") %> 
                                    </div>
                                    <div class="col-6 col-md-3 metric">
                                       <h3 class="metric__data">20oz</h3>
                                       <%= image_tag("diaper--dark.svg", width: 18, class: "text-danger") %>
                                    </div>
                                    <div class="col-6 col-md-3 metric text-danger">
                                       <h3 class="metric__data">20oz</h3>
                                       <%= fa_icon("bed") %>
                                    </div>
                                    <div class="col-6 col-md-3 metric text-success">
                                       <h3 class="metric__data">20oz</h3>
                                       <%= fa_icon("bath") %>
                                    </div>
                                 </div>
                              <% end %>  
                           <% end %>
                        <% end %>
                     </div>
                  </div>
               </div>
               <div class="col-md-4">
                  <div class="baby baby__sidebar">
                     <div class="sidebar__section sidebar__section--info">
                        <h2 class="h4"><%= @baby.name %></h2>
                        <dl class="row">
                           <dt class="col-sm-6 col-md-12 col-xl-5">DOB:</dt>
                           <dd class="col-sm-6 col-md-12 col-xl-7"><%= @baby.dob.strftime("%b %e, %Y") %></dd>
                        </dl>
                        <dl class="row">
                           <dt class="col-sm-6 col-md-12 col-xl-5">Gender:</dt>
                           <dd class="col-sm-6 col-md-12 col-xl-7"><%= @baby.gender %></dd>
                        </dl>
                        <dl class="row">
                           <dt class="col-sm-6 col-md-12 col-xl-5">Weight:</dt>
                           <dd class="col-sm-6 col-md-12 col-xl-7"><%= @baby.weight %> lbs</dd>
                        </dl>
                        <dl class="row">
                           <dt class="col-sm-6 col-md-12 col-xl-5">Height</dt>
                           <dd class="col-sm-6 col-md-12 col-xl-7"><%= @baby.height %> inches</dd>
                        </dl>
                     </div>
                     <div class="sidebar__section sidebar__section--collabs">
                     </div>
                  </div>
               </div>
            </div>         
      </div>
   </div>
</div>
</main>