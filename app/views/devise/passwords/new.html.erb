<main>
<div class="container">
   <div class="row">
      <div class="col col-lg-6 offset-lg-3">
         <%= link_to new_account_session_path do %>
           <%= image_tag("ppp-logo.svg", class: "d-block mx-auto my-3 my-md-5", width: 100, alt: "PooPeePal") %>
         <% end %>
            <div class="card">
               <div class="card-body box-shadow">
                  <h2 class="text-center">Forgot your password?</h2>
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="form-group">
                     <%= f.label :email %><br />
                     <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </div>

                  <div class="form-group">
                     <%= f.button "Send me reset password instructions", class: "btn btn-success btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin' aria-hidden='true'></i> Sending password instructions... "} %>
                  </div>
                  <% end %>
                  <p class="small">
                     Already have an account? <%= link_to "Log in", new_account_session_path %><br>
                     Need an account? <%= link_to "Create one", new_account_registration_path %>
                  </p>
               </div>
            </div>
         </div>
      </div>
   </div>
</main>