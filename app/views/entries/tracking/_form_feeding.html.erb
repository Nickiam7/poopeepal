<div class="modal fade" id="feedingModal" tabindex="-1" role="dialog" aria-labelledby="feedingModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="feedingModalLabel">Track Feeding</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for([@baby, @entry, @feeding]) do |f| %>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-4">
              <div class="d-flex justify-content-between">
                <%= f.label :start_time %>
                <%= f.label "Close", class: "start-done d-none" %>
              </div>
              <%= f.text_field :start_time, class: "form-control datetimepicker-input", data: {toggle: "datetimepicker", target: "#feeding_start_time"}, autocomplete: "off" %>
            </div>
            <div class="col-md-4">
              <div class="d-flex justify-content-between">
                <%= f.label :end_time %>
                <%= f.label "Close", class: "end-done d-none" %>
              </div>              
              <%= f.text_field :end_time, class: "form-control datetimepicker-input", data: {toggle: "datetimepicker", target: "#feeding_end_time"}, autocomplete: "off" %>
            </div>
            <div class="col-md-4">
              <div class="d-flex justify-content-between">
                <%= f.label :amount, "Amount (oz)" %>              
              </div> 
              <%= f.text_field :amount, class: "form-control"%>
            </div>
          </div>
          <div class="row">
            <div class="col mt-3">
              <a data-toggle="collapse" href="#feedingNotes" role="button" aria-expanded="false" aria-controls="feedingNotes">
                  <%= fa_icon("plus") %> Add Note
              </a>
              <div class="collapse" id="feedingNotes">            
                <%= f.label :feeding_notes %>
                <%= f.text_area :feeding_notes, rows: 8, class: "form-control" %>                
              </div>

            </div>
          </div>
        </div>
        <div class="modal-footer d-flex justify-space-between">
          <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
          <%= f.button "Track Feeding", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin' aria-hidden='true'></i> Tracking Feeding..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>