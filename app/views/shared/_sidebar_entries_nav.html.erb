<div class="sidebar__action">
<%= link_to baby_path(@baby), class: "btn btn-primary mx-auto my-3 d-block" do %>
  <%= fa_icon("chevron-left") %> 
  <span class="d-md-none d-lg-inline-block">Back</span>
<% end %>
</div>
<%= link_to root_path, class: "nav-link" do %>
  <%= fa_icon("home") %> 
  <span class="d-md-none d-lg-inline-block">Home</span>
<% end %>
<%= link_to "#", data: {toggle: "modal", target: "#feedingModal"}, class: "nav-link" do %>
  <%= fa_icon("cutlery") %>
  <span class="d-md-none d-lg-inline-block">Track Feeding</span>
<% end %>
<%= link_to "#", data: {toggle: "modal", target: "#diaperModal"}, class: "nav-link" do %>
  <%= image_tag("diaper.svg", width: 16, alt: "Diaper Icon") %>
  <span class="d-md-none d-lg-inline-block">Track Diaper</span>
<% end %>
<%= link_to "", data: {toggle: "modal", target: "#sleepModal"}, class: "nav-link" do %>
  <%= fa_icon("bed") %>
  <span class="d-md-none d-lg-inline-block">Track Sleep</span>
<% end %>
<%= link_to track_bath_baby_entry_path(@baby, @entry), method: :post, class: "nav-link d-flex justify-content-between" do %>
  <div class="mr-1">
    <%= fa_icon("bath") %>
    <span class="d-md-none d-lg-inline-block">Track Bath</span>
  </div>
  <div class="d-flex justify-content-between align-items-center">
    <% if @entry.no_bath? %>
      <%= fa_icon("check-circle", class: "text-primary fa-lg", style: "opacity: 0.3;") %>
    <% else %>  
      <%= fa_icon("check-circle", class: "text-primary fa-lg") %>
    <% end %>
  </div>
<% end %>