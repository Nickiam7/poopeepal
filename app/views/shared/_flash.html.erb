<% flash.each do |key, value| %>
   <div class="<%= flash_class(key) %> flash-alert">
      <div class="container text-center">
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
         </button>   
         <%= value %>
      </div>
   </div>
<% end %>