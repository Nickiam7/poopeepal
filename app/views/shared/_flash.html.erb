<% flash.each do |key, value| %>
   <div class="<%= flash_class(key) %>">
      <div class="container text-center">
         <%= value %>
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
         </button>   
      </div>
   </div>
<% end %>