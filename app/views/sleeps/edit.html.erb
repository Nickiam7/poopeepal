<main class="vh-100" id="diaperModal">
<div class="container">
   <div class="card animation slideDownIn mb-5">
      <div class="card-body box-shadow">
         <h1>Edit Sleep</h1>  
        <%= form_for([@baby, @entry, @sleep]) do |f| %>
          <div class="modal-body">
            <div class="row">
              <div class="col-md-5">
                <div class="d-flex justify-content-between">
                  <%= f.label :start_time %>
                  <%= f.label "Close", class: "start-done d-none" %>
                </div>
                <%= f.text_field :start_time, class: "form-control datetimepicker-input", data: {toggle: "datetimepicker", target: "#sleep_start_time"}, autocomplete: "off" %>
              </div>
              <div class="col-md-2 d-flex justify-content-center align-items-center">
                <div class="form-group mb-0 mt-1">
                  <%= f.label "In Progress?" %>
                  <label class="switch switch-green">
                    <%= f.check_box :in_progress, class: "switch-input"  %>
                    <span class="switch-label" data-on="Yes" data-off="No"></span>
                    <span class="switch-handle"></span>
                  </label>
                </div>
              </div>
              <div class="col-md-5">
                <div class="d-flex justify-content-between">
                  <%= f.label :end_time %>
                  <%= f.label "Close", class: "end-done d-none" %>
                </div>              
                <%= f.text_field :end_time, class: "form-control datetimepicker-input", data: {toggle: "datetimepicker", target: "#sleep_end_time"}, autocomplete: "off" %>
              </div>
              <div class="col-md-12 mt-2">
                <div class="d-flex justify-content-between">
                  <%= f.label :location %>              
                </div> 
                <%= f.text_field :location, class: "form-control"%>
              </div>
            </div>
            <div class="row">
              <div class="col mt-3">
                <a data-toggle="collapse" href="#sleepNotes" role="button" aria-expanded="false" aria-controls="sleepNotes">
                    <%= fa_icon("plus") %> Add Note
                </a>
                <div class="collapse" id="sleepNotes">            
                  <%= f.label :notes %>
                  <%= f.text_area :notes, rows: 8, class: "form-control" %>                
                </div>

              </div>
            </div>
          </div>
          <div class="modal-footer d-flex justify-space-between">
            <%= link_to "Back", :back, class: "btn btn-outline-primary" %>
            <%= f.button "Track Sleep", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin' aria-hidden='true'></i> Tracking Sleep..."} %>
          </div>
        <% end %>
    </div>
  </div>
</div>
</main>